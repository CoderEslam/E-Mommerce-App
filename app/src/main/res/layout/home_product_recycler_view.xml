<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:id="@+id/continer"
    android:background="@drawable/buttons_white">

    <TextView
        android:padding="2dp"
        android:id="@+id/h_s_titelScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deals of the Day"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/h_s_btnScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <Button
        android:background="@drawable/button_gray"
        android:textColor="#000000"
        android:text="View All"
        android:textAllCaps="false"
        android:id="@+id/h_s_btnScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/h_s_Recycler_Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_s_btnScroll"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>